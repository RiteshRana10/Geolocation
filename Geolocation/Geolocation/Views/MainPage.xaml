<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Geolocation.Views.MainPage" Title="{Binding Title}">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Orientation="Vertical">

        <Label Text="Latitude and Longitude for current Location"></Label>
         <Label Text="{Binding Lat}"></Label>
        <Label Text="{Binding Lng}"></Label>
    </StackLayout>
</ContentPage>